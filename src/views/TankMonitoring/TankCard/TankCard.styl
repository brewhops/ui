.tank {
  background: Teal;
  width: 100%;
  height: 100%;
  min-height 128px;

  table {
    width: 100%;
    padding-left: 5px;
    padding-right: 7px;

    td:nth-child(2) {
      text-align: right;
    }

    td {
      padding: 3px;
    }
  }

  .tank-name {
    padding: 8px;
    font-size: 20px;
  }

  .tank-action {
    padding-left: 10px;
    padding-right: 10px;
    margin-top: 10px;
    margin-bottom: 8px;
    text-align: center;
  }
}